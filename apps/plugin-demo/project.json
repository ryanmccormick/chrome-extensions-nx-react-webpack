{
  "name": "plugin-demo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/plugin-demo/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project plugin-demo --web",
  "targets": {
    "build": {
      "options": {
        "assets": [
          {
            "input": "./src",
            "glob": "manifest.json",
            "output": "."
          },
          {
            "input": "./src/images",
            "glob": "*.*",
            "output": "./images"
          }
        ]
      }
    }
  }
}
